#include "my_fdf.h"

static void	to_upper(char *char_ptr)
{
	if (*char_ptr <= 'z' && *char_ptr >= 'a')
		*char_ptr -= 32;
}

static int init(char *num_str)
{
	static char *hold;
	
	if (hold == 0)
	{
		return (0);
	}
	else
	{
		hold = num_str;
	}
}

int	hex_to_dec(char *num_str, int ***int_arr)
{
	int	int_value;

	int_value = init(num_str);

	int_value = 0;
	if (*num_str == '0' && *(num_str + 1) == 'x')
		num_str = num_str + 2;
	while (*num_str)
	{
		if ('0' <= *num_str && *num_str <= '9')
			int_value = (int_value * 16) + (*num_str - '0');
		if ('A' <= *num_str && *num_str <= 'F')
			int_value = (int_value * 16) + (*num_str - 55);
		++num_str;
	}
	재귀 들어가면 될 듯?
	근데 굳이 재귀 안들어가도 됨.
	Z값에서는 재귀를 던져주고 리턴하는 것.
	재귀를 던지는 동안에는 char는 콤마를 기준으로 넘어간다.
	재귀를 들어가기 싫다면  
	ft_atoi를 Z값에 사용을 한다.
	이후 hex_to_dec를 통해 color값을 구한다.
	// insert int value
	return (int_value);
}
